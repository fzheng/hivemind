{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "a.candidates.v1",
  "title": "CandidateEvent",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "address": {
      "type": "string",
      "pattern": "^0x[a-fA-F0-9]{40}$"
    },
    "source": {
      "type": "string",
      "enum": ["seed", "backfill", "daily"]
    },
    "ts": {
      "type": "string",
      "format": "date-time"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 64
      },
      "default": []
    },
    "nickname": {
      "type": ["string", "null"],
      "minLength": 1,
      "maxLength": 64
    },
    "score_hint": {
      "type": ["number", "null"],
      "minimum": -1,
      "maximum": 1
    },
    "meta": {
      "type": "object",
      "additionalProperties": true,
      "default": {}
    },
    "notes": {
      "type": ["string", "null"],
      "maxLength": 280
    }
  },
  "required": ["address", "source", "ts"]
}
