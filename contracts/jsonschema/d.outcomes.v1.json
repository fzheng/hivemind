{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "d.outcomes.v1",
  "title": "OutcomeEvent",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "ticket_id": {
      "type": "string",
      "format": "uuid"
    },
    "closed_ts": {
      "type": "string",
      "format": "date-time"
    },
    "result_r": {
      "type": ["number", "null"]
    },
    "closed_reason": {
      "type": "string",
      "enum": ["timebox", "manual", "error"]
    },
    "notes": {
      "type": ["string", "null"],
      "maxLength": 280
    }
  },
  "required": ["ticket_id", "closed_ts", "closed_reason"]
}
