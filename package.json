{
  "name": "sigmapilot",
  "version": "1.0.0",
  "private": true,
  "license": "PolyForm-Noncommercial-1.0.0",
  "scripts": {
    "contracts:generate": "node scripts/generate-contracts.mjs",
    "prebuild": "npm run contracts:generate",
    "build": "tsc -b",
    "e2e-smoke": "node scripts/e2e-smoke.mjs",
    "dev:scout": "ts-node-dev --respawn --transpile-only services/hl-scout/src/index.ts",
    "dev:stream": "ts-node-dev --respawn --transpile-only services/hl-stream/src/index.ts",
    "migrate": "node scripts/migrate.js up",
    "migrate:status": "node scripts/migrate.js status",
    "test": "jest && playwright test",
    "test:unit": "jest",
    "test:py": "cd services/hl-decide && python -m pytest -v",
    "test:all": "jest && cd services/hl-decide && python -m pytest -v",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:restart": "docker compose restart",
    "docker:rebuild": "docker compose down && docker compose build && docker compose up -d",
    "docker:rebuild:clean": "docker compose down && docker compose build --no-cache && docker compose up -d",
    "docker:wipe": "docker compose down -v && docker compose build --no-cache && docker compose up -d",
    "docker:logs": "docker compose logs -f",
    "docker:ps": "docker compose ps",
    "admin:refresh": "node scripts/admin-refresh.mjs",
    "admin:refresh:status": "node scripts/admin-refresh.mjs --status",
    "init:alpha-pool": "node scripts/init-alpha-pool.mjs"
  },
  "dependencies": {
    "@hl/ts-lib": "file:packages/ts-lib",
    "@nktkas/hyperliquid": "^0.27.1",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "nats": "^2.25.2",
    "pg": "^8.12.0",
    "prom-client": "^15.1.2",
    "redis": "^4.6.13",
    "swagger-ui-express": "^5.0.1",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "@types/pg": "^8.15.6",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/ws": "^8.18.1",
    "jest": "^29.7.0",
    "openapi-types": "^12.1.3",
    "ts-jest": "^29.2.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.0"
  }
}
